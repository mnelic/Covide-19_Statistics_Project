<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link asp-href-include="/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/css/bootstrap.min.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar navbar-expand-md bg-dark navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Covid-19 Website</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#MyNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="MyNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="History">History</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Tests" asp-action="Index">Tests</a></li>

                    @if (User.IsInRole("Admin") || User.IsInRole("DataCapturer"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Patients" asp-action="Index">Patients</a></li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Users</a></li>
                    }


                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-link">Hello @User.Identity.Name</li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button class="btn btn-link nav-link" type="submit">Log out</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"> 
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Log in</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="pb-3">
            @RenderBody()
        </div>
    </div>

    <div class="container mt-5 border-top footer text-muted">
        <div class="text-center">
            <p>
                Created by: Mnelisi Mbonani
                <br />
                &copy; Profile Work
            </p>
        </div>
    </div>
    <script asp-src-include="lib/jquery/jquery.slim.min.js"></script>

    <script asp-src-include="lib/popper.js/popper.min.js"></script>

    <script asp-src-include="lib/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
